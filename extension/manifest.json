{
	"manifest_version": 3,
	"name": "Random YouTube Video",
	"description": "Play a random video uploaded on the current YouTube channel.",
	"version": "1.5.2",
	"icons": {
		"16": "images/icon-16-red.png",
		"32": "images/icon-32-red.png",
		"48": "images/icon-48-red.png",
		"128": "images/icon-128-red.png"
	},
	"content_scripts": [
		{
			"js": [
				"js/utils.js",
				"js/shuffleVideo.js",
				"js/buildShuffleButton.js",
				"js/content.js"
			],
			"matches": [
				"*://*.youtube.com/*"
			],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "html/popup.html",
		"default_icon": {
			"16": "images/icon-16-red.png",
			"32": "images/icon-32-red.png",
			"48": "images/icon-48-red.png",
			"128": "images/icon-128-red.png"
		}
	},
	"permissions": [
		"storage",
		"tabs"
	],
	"background": {
		"service_worker": "js/background.js"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"data/shufflingTips.json"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}